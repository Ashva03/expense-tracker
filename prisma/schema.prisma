generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UserDetails {
  app_name     String
  country_code String
  extra        String
  time_zone_id String
}

model Company {
  id            String   @id @map("_id")
  created_by    String
  created_time  DateTime @db.Date
  favourite     String[]
  invited_users String[]
  name          String
  profile_image String
  updated_time  DateTime @db.Date
  users         String[]
}

model InvitedUsers {
  id         String   @id @map("_id")
  companies  String[]
  created_at DateTime @db.Date
  email      String
  updated_at DateTime @db.Date
}

model Transaction {
  id           String   @id @map("_id")
  amount       Float
  company_id   String
  created_by   String
  created_time DateTime @db.Date
  desc         String
  title        String
  type         Int
  updated_by   String
  updated_time DateTime @db.Date
  user_id      String
}

model User {
  id               String      @id @map("_id")
  created_at       DateTime    @db.Date
  details          UserDetails
  email            String
  name             String
  normalized_email String
  password         String
  profile_image    String?
  updated_at       DateTime    @db.Date
  user_name        String
}
