generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type UserDetails {
  app_name     String
  country_code String
  extra        String
  time_zone_id String
}

model User {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  user_name        String
  email            String
  name             String
  normalized_email String
  password         String
  details          UserDetails
  created_at       DateTime    @default(now()) @db.Date
  updated_at       DateTime    @updatedAt @db.Date
}
